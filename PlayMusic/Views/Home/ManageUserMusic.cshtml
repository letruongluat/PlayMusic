@model IEnumerable<PlayMusic.Models.tblAccount>

@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .danhsach {
        margin: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }
</style>

<div class="danhsach">
    <h3>Quản lý danh sách người dùng</h3>
    <hr style="width:85%" />

    <table class="table">
        <thead>
            <tr>
                <th>ID Account</th>
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>Ngày Sinh</th>
                <th>Giới Tính</th>
                <!-- Thêm các cột khác nếu cần thiết -->
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.IDacount</td>
                    <td>@user.Name</td>
                    <td>@user.email</td>
                    <td>@user.ngaysinh</td>
                    <td>@user.gioitinh</td>
                    <!-- Thêm các cột khác nếu cần thiết -->
                    <td>
                        <a href="@Url.Action("ViewUserDetails", "Home", new { id = user.IDacount })">Xem chi tiết</a>
                        <a href="@Url.Action("DeleteUser", "Home", new { id = user.IDacount })">Xóa</a>
                        <!-- Thêm các chức năng khác nếu cần -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
