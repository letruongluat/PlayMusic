<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Music App</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .header {
            background-color: #0066cc;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header .left, .header .center, .header .right {
                display: flex;
                align-items: center;
            }

                .header .left a, .header .right a {
                    color: white;
                    margin-right: 20px;
                    text-decoration: none;
                    padding: 10px 15px;
                    background-color: #005bb5;
                    border-radius: 5px;
                }

                    .header .left a:hover, .header .right a:hover {
                        background-color: #004999;
                    }

            .header .center {
                flex-grow: 1;
                justify-content: center;
            }

                .header .center input[type="text"] {
                    width: 200px;
                    padding: 5px;
                }

                .header .center button {
                    padding: 5px 10px;
                }

        .content {
            display: flex;
            flex: 1;
        }

        .sidebar {
            background-color: #0066cc;
            width: 200px;
            padding: 20px;
            box-sizing: border-box;
        }

        .main-content {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .menu-item {
            margin-bottom: 10px;
        }

        .sidebar a {
            display: block;
            text-decoration: none;
            color: white;
            padding: 10px;
            background-color: #0066cc;
            border-radius: 5px;
        }

            .sidebar a:hover {
                background-color: #005bb5;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="left">
                <a href="@Url.Action("Index", "Song")">Trang chủ</a>
                <a href="#">Upload nhạc</a>
            </div>
            <div class="center">
                <input type="text" placeholder="Tìm Kiếm" />
                <button>Tìm</button>
            </div>
            <div class="right">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Index", "Login")">Logout</a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Login")">Login</a>
                }
            </div>
        </div>

        <div style="text-align: center; background-color: #0066cc;color:red;">
            <h2 class="center"></h2>
        </div>
        <div class="content">
            <div class="sidebar">
                <a href="@Url.Action("NewMusic", "Home")" class="menu-item">Nhạc Mới</a>
                <a href="@Url.Action("Genres", "Home")" class="menu-item">Thể loại</a>
                <a href="@Url.Action("Top100", "Home")" class="menu-item">Top 100</a>
                <a href="@Url.Action("Artists", "Home")" class="menu-item">Ca sĩ</a>
                <a href="@Url.Action("Contribute", "Home")" class="menu-item">Đóng góp nhạc</a>
                <a href="@Url.Action("ContributedList", "Home")" class="menu-item">Danh sách nhạc đã đóng góp</a>
                <a href="@Url.Action("ManageUserMusic", "Home")" class="menu-item">Quản lý nhạc người dùng</a>
                <a href="@Url.Action("ManageDisplayedSongs", "Home")" class="menu-item">Quản lý bài hát hiển thị</a>
                <a href="@Url.Action("ManageViews", "Home")" class="menu-item">Quản lý số lượt truy cập</a>
                <a href="@Url.Action("ManageFavoriteAlbums", "Home")" class="menu-item">Quản lý Album yêu thích</a>
            </div>
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
